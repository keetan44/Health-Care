<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    tools:context=".home.MyDoctors">


    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="25dp"
            android:textColor="#3E55A7"
            android:text="I would like to"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/talk"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="#3E55A7"
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="10dp"
                android:background="@drawable/talk_to_doc"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">


                <TextView
                    android:gravity="center"
                    android:text="Talk to a Doctor Now"
                    android:textSize="23dp"
                    android:textColor="#FFF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/view"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="#DAD9D8"
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="10dp"
                android:background="@drawable/view_my_docs"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">


                <TextView
                    android:gravity="center"
                    android:text="View My Doctors"
                    android:textSize="23dp"
                    android:textColor="#737270"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/find"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="#DAD9D8"
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="10dp"
                android:background="@drawable/find_doc"
                android:layout_width="50dp"
                android:layout_height="40dp"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">


                <TextView
                    android:gravity="center"
                    android:text="Find a Doctor"
                    android:textSize="23dp"
                    android:textColor="#737270"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/compare"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="#DAD9D8"
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="10dp"
                android:background="@drawable/price"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">


                <TextView
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:text="Procedure Price Compare"
                    android:textSize="23dp"
                    android:textColor="#737270"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/emergency"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="#F45F5F"
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="10dp"
                android:background="@drawable/ambulance"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">


                <TextView
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="Find Emergency Help"
                    android:textSize="23dp"
                    android:textColor="#FFF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>